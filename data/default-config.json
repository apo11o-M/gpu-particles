{
  "name": "default demo",
  // ======================= scene config =======================
  // Width and height of the canvas
  "borderLeft": 50.0,
  "borderRight": 150.0,
  "borderTop": 100.0,
  "borderBottom": 200.0,
  // Background color of the canvas, RGBA = RedGreenBlueAlpha
  "backgroundColor": "0x000000ff",
  // maximum number of particles in the simulation
  "maxNumParticles": 100,
  
  // ====================== particle config =====================
  // radius of the particles to render
  "particleRadius": 7.0,
  // mass of the particles in the simulation
  "particleMass": 20.0,
  
  // ======================= physics stuff ======================
  // how much to dampen the velocity of the particles
  "velocityDampingFactor": 0.95,
  // velocity will be dampened this many times a second
  "velocityDampingFactorRate": 60.0,
  // how elastic/inelastic the particle collisions are
  // 0.0 = inelastic, 1.0 = elastic
  "restitutionCoefficient": 0.6,
  "gravity": 200.0
}
